--[[
    MOUNT RNG - Xeno için RNG Manipülasyonu
    Açıklama: math.random ve Random sınıfını override eder.
    Buton ile aç/kapa, F1 tuşu ile de açıp kapatabilirsin.
    Test etiketi anlık değerleri gösterir.
]]

-- Orijinal fonksiyonlar
local oldRandom = math.random
local oldRandomNew = Random.new
local oldNextInteger = Random.NextInteger
local enabled = false

-- Override
math.random = function(a, b)
    if not enabled then return oldRandom(a, b) else return b or a end
end

Random.new = function(...)
    local rand = oldRandomNew(...)
    rand.NextInteger = function(self, min, max)
        return enabled and max or oldNextInteger(self, min, max)
    end
    return rand
end

-- GUI (CoreGui'de)
local coreGui = game:GetService("CoreGui")
local userInput = game:GetService("UserInputService")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 100)
frame.Position = UDim2.new(0, 10, 0, 10)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 2
frame.BorderColor3 = Color3.fromRGB(0, 255, 0)
frame.Active = true
frame.Draggable = true
frame.Parent = coreGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
title.Text = "RNG Modifier"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.Parent = frame

local button = Instance.new("TextButton")
button.Size = UDim2.new(0.8, 0, 0, 30)
button.Position = UDim2.new(0.1, 0, 0.35, 0)
button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
button.TextColor3 = Color3.new(1, 1, 1)
button.Text = "Kapalı"
button.Font = Enum.Font.GothamBold
button.TextSize = 14
button.Parent = frame

local testLabel = Instance.new("TextLabel")
testLabel.Size = UDim2.new(1, 0, 0, 20)
testLabel.Position = UDim2.new(0, 0, 0.8, 0)
testLabel.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
testLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
testLabel.Text = "Test: -"
testLabel.Font = Enum.Font.Gotham
testLabel.TextSize = 12
testLabel.Parent = frame

-- Buton işlevi
button.MouseButton1Click:Connect(function()
    enabled = not enabled
    button.BackgroundColor3 = enabled and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)
    button.Text = enabled and "Açık" or "Kapalı"
end)

-- F1 tuşu işlevi
userInput.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.F1 then
        enabled = not enabled
        button.BackgroundColor3 = enabled and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)
        button.Text = enabled and "Açık" or "Kapalı"
    end
end)

-- Test döngüsü
spawn(function()
    while true do
        local val1 = math.random(1, 100)
        local r = Random.new()
        local val2 = r:NextInteger(1, 100)
        testLabel.Text = string.format("math: %d | Random: %d", val1, val2)
        wait(0.5)
    end
end)

print("✅ RNG scripti yüklendi! Buton veya F1 ile aç/kapa.")
