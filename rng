-- RNG Override (GUI'siz, F1 ile açılıp kapanır)
local oldRandom = math.random
local oldRandomNew = Random.new
local oldNextInteger = Random.NextInteger
local enabled = false

-- Override math.random
math.random = function(a, b)
    if not enabled then
        return oldRandom(a, b)
    else
        return b or a
    end
end

-- Override Random sınıfı
Random.new = function(...)
    local rand = oldRandomNew(...)
    rand.NextInteger = function(self, min, max)
        if enabled then
            return max
        else
            return oldNextInteger(self, min, max)
        end
    end
    return rand
end

-- F1 tuşu ile aç/kapa
game:GetService("UserInputService").InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.F1 then
        enabled = not enabled
        if enabled then
            print("✅ RNG AÇIK (her zaman maksimum)")
        else
            print("❌ RNG KAPALI (normal)")
        end
    end
end)

print("RNG scripti hazır. F1 ile aç/kapa.")
