-- Xeno için mini RNG butonu
local oldRandom = math.random
local isEnabled = false

math.random = function(a, b)
    if not isEnabled then
        return oldRandom(a, b)
    else
        return b or a  -- her zaman üst sınır
    end
end

-- Random sınıfı override
local oldRandomNew = Random.new
Random.new = function(...)
    local r = oldRandomNew(...)
    local oldNextInt = r.NextInteger
    r.NextInteger = function(self, min, max)
        if isEnabled then
            return max
        else
            return oldNextInt(self, min, max)
        end
    end
    return r
end

-- Küçük buton (CoreGui'de)
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 70, 0, 30)
button.Position = UDim2.new(0, 10, 0, 10)
button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
button.TextColor3 = Color3.new(1, 1, 1)
button.Text = "Kapalı"
button.Font = Enum.Font.GothamBold
button.TextSize = 14
button.Parent = game:GetService("CoreGui")

button.MouseButton1Click:Connect(function()
    isEnabled = not isEnabled
    if isEnabled then
        button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
        button.Text = "Açık"
    else
        button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
        button.Text = "Kapalı"
    end
end)

print("Buton eklendi. Tıkla ve RNG'yi manipüle et.")
